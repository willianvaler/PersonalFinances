<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pf?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <mapping resource="com/wav/pf/entities/FormaPagamento.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Categoria.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Endereco.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Carteira.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Subcategoria.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Usuario.hbm.xml"/>
    <mapping resource="com/wav/pf/entities/Conta.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
